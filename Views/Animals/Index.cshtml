@using DataLib.Data
@model OktayDS
@{
    ViewBag.Title = "BananaIndex";
}

<table cellpadding="0" cellspacing="0">
    <tr> 
        <th style="width:100px">AnimalD</th>
        <th style="width:100px">AnimalName</th>
        <th style="width:100px">AnimaType</th>
        <th style="width:50px">Edit</th>
        <th style="width:50px">Delete</th>


    </tr>

    @foreach (OktayDS.AnimalsRow row in Model.Animals.Rows)
            {
                <tr>
                    <td style="width:100px">@row.AnimalD</td>
                    <td style="width:100px">@row.AnimalName</td>
                    <td style="width:100px">@row.AnimalType</td>
                    <td style="width:50px"><button onclick="editAnimalByID('@row["AnimalD"]')">edit</button></td>
                    <td style="width:50px"><button>delete</button></td>
                </tr>
            }


    </table>

<Script>
    function editAnimalByID(animalD) {
        window.location.href = '@Url.Action("Edit","Animals")/' + animalD;
    }
    </Script>

